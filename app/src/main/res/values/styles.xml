<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 标题文本的样式 -->
    <style name="TitleText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_title</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 副文本的样式 -->
    <style name="SubTitleText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_small</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
