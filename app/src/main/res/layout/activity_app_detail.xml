<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#5fe2e0"
    android:subtitle="Everything is here"
    android:subtitleTextColor="#1b1eca"
    android:title="GooglePlay"
    android:titleTextColor="#ea5b5b" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/holder_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- app info -->
            <!--<include layout="@layout/layout_detail_app_info" />-->

        </LinearLayout>

    </ScrollView>

    <FrameLayout android:layout_width="match_parent"
        android:id="@+id/fl_download"
        android:layout_height="55dp"></FrameLayout>

</LinearLayout>